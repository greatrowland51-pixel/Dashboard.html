<script>
let h=[];
let chart=null;
function startAnalysis(){
document.getElementById('ctrl').classList.add('show');
document.getElementById('gs').style.opacity='0.5';
}
function gen(){
let p=[];
let pr=100;
for(let i=0;i<50;i++){
pr+=(Math.random()-0.5)*2;
p.push(Math.max(95,Math.min(105,pr)));
}
return p;
}
function rsi(p){
if(p.length<14)return 50;
let g=0,l=0;
for(let i=p.length-14;i<p.length;i++){
let d=p[i]-p[i-1];
if(d>0)g+=d;
else l-=d;
}
let rs=(g/14)/(l/14);
return 100-(100/(1+rs));
}
function analyzeMarket(){
let p=document.getElementById('pair').value;
let t=document.getElementById('tf').value;
document.getElementById('ana').classList.add('show');
document.getElementById('res').classList.remove('show');
let pro=0;
let iv=setInterval(function(){
pro+=Math.random()*25;
if(pro>=100){
pro=100;
clearInterval(iv);
show(p,t);
}
document.getElementById('bar').style.width=pro+'%';
document.getElementById('bar').textContent=Math.round(pro)+'%';
},300);
}
function show(p,t){
let pr=gen();
let r=rsi(pr);
let sig='NONE';
let conf=0;
let cnt=0;
let reas=[];
if(r<30){
cnt+=1;
reas.push('üìä RSI '+Math.round(r)+' (Oversold - Bullish)');
}else if(r>70){
cnt-=1;
reas.push('üìä RSI '+Math.round(r)+' (Overbought - Bearish)');
}else{
reas.push('üìä RSI '+Math.round(r)+' (Neutral)');
}
let m=Math.random()>0.5?1:-1;
if(m>0){
cnt+=1;
reas.push('üìà MACD positive (Bullish)');
}else{
cnt-=1;
reas.push('üìâ MACD negative (Bearish)');
}
let bb=Math.random();
if(bb>0.7){
cnt+=1;
reas.push('üéØ Price below lower band (Oversold)');
}else if(bb<0.3){
cnt-=1;
reas.push('üéØ Price above upper band (Overbought)');
}else{
reas.push('üéØ Price within Bollinger Bands');
}
if(Math.random()>0.5){
cnt+=1;
reas.push('üìä Price above SMA20 (Bullish)');
}else{
cnt-=1;
reas.push('üìä Price below SMA20 (Bearish)');
}
if(cnt>=3){
sig='BUY';
conf=Math.min(100,(cnt/4)*100);
}else if(cnt<=-3){
sig='SELL';
conf=Math.min(100,(Math.abs(cnt)/4)*100);
}else{
sig='HOLD';
conf=50;
}
document.getElementById('res').classList.add('show');
document.getElementById('ana').classList.remove('show');
if(sig==='BUY'){
document.getElementById('arr').innerHTML='‚¨ÜÔ∏è';
document.getElementById('arr').className='arrow buy';
document.getElementById('txt').textContent='BUY SIGNAL';
document.getElementById('txt').className='text buy';
}else if(sig==='SELL'){
document.getElementById('arr').innerHTML='‚¨áÔ∏è';
document.getElementById('arr').className='arrow sell';
document.getElementById('txt').textContent='SELL SIGNAL';
document.getElementById('txt').className='text sell';
}else{
document.getElementById('arr').innerHTML='‚è∏Ô∏è';
document.getElementById('arr').className='arrow hold';
document.getElementById('txt').textContent='HOLD';
document.getElementById('txt').className='text hold';
}
document.getElementById('p').textContent=p;
document.getElementById('cf').textContent=conf+'%';
document.getElementById('tf2').textContent=t;
document.getElementById('tm').textContent=new Date().toLocaleTimeString();
document.getElementById('rea').innerHTML=reas.map(function(r){return '<div class="reason">'+r+'</div>'}).join('');
document.getElementById('ch').classList.add('show');
document.getElementById('sig').classList.add('show');
drw(pr);
h.unshift({pair:p,signal:sig,confidence:conf,time:new Date().toLocaleTimeString()});
upd();
}
function drw(pr){
let ctx=document.getElementById('c').getContext('2d');
if(chart)chart.destroy();
chart=new Chart(ctx,{type:'line',data:{labels:pr.map(function(x,i){return i}),datasets:[{label:'Price',data:pr,borderColor:'#10b981',backgroundColor:'rgba(16,185,129,0.1)',borderWidth:2,fill:true,tension:0.4}]},options:{responsive:true,maintainAspectRatio:false,plugins:{legend:{labels:{color:'#cbd5e1'}}},scales:{y:{ticks:{color:'#94a3b8'},grid:{color:'rgba(148,163,184,0.1)'}},x:{ticks:{color:'#94a3b8'},grid:{color:'rgba(148,163,184,0.1)'}}}}});
}
function upd(){
let l=document.getElementById('sl');
l.innerHTML=h.slice(0,5).map(function(s){
return '<div class="signal-item '+(s.signal==='SELL'?'sell':s.signal==='HOLD'?'hold':'')+'" ><div style="font-weight:bold;margin-bottom:8px;">'+s.pair+'</div><div style="color:'+(s.signal==='BUY'?'#10b981':s.signal==='SELL'?'#ef4444':'#f59e0b')+';font-weight:bold;">'+(s.signal==='BUY'?'üü¢':s.signal==='SELL'?'üî¥':'‚è∏Ô∏è')+' '+s.signal+'</div><div style="margin-top:8px;color:#94a3b8;">'+s.confidence+'% ‚Ä¢ '+s.time+'</div></div>';
}).join('');
}
</script>
